#!/bin/sh

# script/tests/gometalinter: Run linters and static analysis

set -e

cd "$(dirname "$0")/../.."

matches=$(grep \
  --ignore-case \
  --recursive \
  --exclude-dir vendor \
  '^// [a-z]* \.\.\.$' . || true)

if [ -n "$matches" ]; then
  echo >&2 "Invalid code comments detected:"
  echo >&2
  echo >&2 "$matches"
  echo >&2
  exit 1
fi

gometalinter \
  --vendor \
  --tests \
  --aggregate \
  --deadline=300s \
  --vendored-linters \
  --enable-all \
  --line-length=100 \
  --disable=dupl \
  --linter='lll:lll -e func -g -l {maxlinelength}:PATH:LINE:MESSAGE' \
  --linter='test:go test -short:PATH:LINE:MESSAGE' \
  --linter='testify:go test -short:PATH:LINE:MESSAGE' \
  ${@:-./...}
